{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@users/*": [
        "src/users/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@products/*": [
        "src/products/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}